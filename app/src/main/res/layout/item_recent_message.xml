<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_sdk_root_view_text_user"
    style="@style/RowStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/chat_message_text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@color/background_tab_pressed"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_content"
                style="@style/styleChatMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:padding="7dp" android:textColor="#333"
                android:text="Message Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </FrameLayout>
        <!--        <com.braunster.chatsdk.view.ChatBubbleTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Messahe texx"
                    android:id="@+id/txt_content"
                    android:padding="6dp"
                    app:bubble_gravity="right"
                    style="@style/TextViewStyle"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/txt_time"
        style="@style/MessageDateStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_message_text_container"
        android:layout_below="@+id/chat_message_text_container"
        android:text="Time"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txt_user"
        style="@style/MessageDateStyle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="User"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBaseline="@+id/txt_time"
        android:layout_alignBottom="@+id/txt_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <co.com.gdgcali.labfirebase.view.layout.CircleImageView
        android:id="@+id/img_user_image"
        style="@style/chatIconStyle"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher" />
</RelativeLayout>